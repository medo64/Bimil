<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bimil.PasswordGeneratorWindow"
        Width="600"
        WindowStartupLocation="CenterOwner"
        CanResize="false"
        SizeToContent="Height"
        Title="Password Generator">

    <StackPanel Margin="7">

        <TabControl Name="tabKind">

            <TabItem Header="Classic">
                <StackPanel Margin="0 7 0 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Name="chbClassicIncludeLowercaseLetters" Grid.Column="0" Grid.Row="0"
                                  Content="Include lowercase"
                                  ToolTip.Tip="Includes lower-case letters (a-z)." />
                        <CheckBox Name="chbClassicIncludeUppercaseLetters" Grid.Column="0" Grid.Row="1"
                                  Content="Include uppercase"
                                  ToolTip.Tip="Includes upper-case letters (A-Z)." />
                        <CheckBox Name="chbClassicIncludeDigits" Grid.Column="0" Grid.Row="2"
                                  Content="Include digits"
                                  ToolTip.Tip="Includes numeric digits (0-9)." />
                        <CheckBox Name="chbClassicIncludeSpecialCharacters" Grid.Column="0" Grid.Row="3"
                                  Content="Include special"
                                  ToolTip.Tip="Includes special characters." />

                        <CheckBox Name="chbClassicExcludeSimilarCharacters" Grid.Column="1" Grid.Row="0"
                                  Content="Exclude similar"
                                  ToolTip.Tip="Excludes characters that are visually similar (e.g. I and 1)." />
                        <CheckBox Name="chbClassicExcludeMovableCharacters" Grid.Column="1" Grid.Row="1"
                                  Content="Exclude moveable"
                                  ToolTip.Tip="Excludes characters that move between most common keyboards (e.g. Y and Z)." />
                        <CheckBox Name="chbClassicExcludeUnpronounceable" Grid.Column="1" Grid.Row="2"
                                  Content="Exclude unpronounceable"
                                  ToolTip.Tip="Generated password alternates consonants and vowels." />
                        <CheckBox Name="chbClassicExcludeRepeatedCharacters" Grid.Column="1" Grid.Row="3"
                                  Content="Exclude repeated"
                                  ToolTip.Tip="Excludes consequitive character repeats." />

                        <StackPanel Grid.Column="0" Grid.Row="4" Margin="0 7 0 0" HorizontalAlignment="Center" Orientation="Horizontal">
                            <Label Content="Password length:" VerticalAlignment="Center" />
                            <TextBox Name="txtClassicLength" Text="14" MaxLength="2" TextAlignment="Center" Margin="7 0 0 0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Word">
                <StackPanel Margin="0 7 0 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Name="chbWordIncludeNumber" Grid.Column="0" Grid.Row="0"
                                  Content="Include number"
                                  ToolTip.Tip="Includes number 1-100 to one of words." />
                        <CheckBox Name="chbWordIncludeSpecialCharacters" Grid.Column="0" Grid.Row="1"
                                  Content="Include special characters"
                                  ToolTip.Tip="Includes special characters." />
                        <CheckBox Name="chbWordIncludeSwappedCase" Grid.Column="0" Grid.Row="2"
                                  Content="Include swapped case"
                                  ToolTip.Tip="Swaps case for one of the words." />
                        <CheckBox Name="chbWordDropOneCharacter" Grid.Column="0" Grid.Row="3"
                                  Content="Drop one character"
                                  ToolTip.Tip="Drops a single character from one of the words." />

                        <CheckBox Name="chbWordUseTitlecase" Grid.Column="1" Grid.Row="0"
                                  Content="Title case"
                                  ToolTip.Tip="Words will start with uppercase letter." />
                        <CheckBox Name="chbWordRestrictWordBreakup" Grid.Column="1" Grid.Row="1"
                                  Content="Restrict word breakup"
                                  ToolTip.Tip="Any non-word character will be only appended or prepended to the word instead of being in the middle." />
                        <CheckBox Name="chbWordRestrictAdjustmentsToSuffix" Grid.Column="1" Grid.Row="2"
                                  Content="Restrict adjustment to suffix"
                                  ToolTip.Tip="Any non-word characters will be only appended at the end of password." />
                        <CheckBox Name="chbWordUseSpacesSeparator" Grid.Column="1" Grid.Row="3"
                                  Content="Use space separator"
                                  ToolTip.Tip="Each word will be separated by a space." />

                        <StackPanel Grid.Column="0" Grid.Row="4" Margin="0 7 0 0" HorizontalAlignment="Center" Orientation="Horizontal">
                            <Label Content="Word count:" VerticalAlignment="Center" />
                            <TextBox Name="txtWordCount" Text="5" MaxLength="2" TextAlignment="Center" Margin="7 0 0 0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Triplet">
                <StackPanel Margin="0 7 0 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Name="chbTripletIncludeNumber" Grid.Column="0" Grid.Row="0"
                                  Content="Include number"
                                  ToolTip.Tip="Includes number 1-100 to one of triplets." />
                        <CheckBox Name="chbTripletIncludeSpecialCharacters" Grid.Column="0" Grid.Row="1"
                                  Content="Include special characters"
                                  ToolTip.Tip="Includes special characters." />
                        <CheckBox Name="chbTripletIncludeSwappedCase" Grid.Column="0" Grid.Row="2"
                                  Content="Include swapped case"
                                  ToolTip.Tip="Swaps case for one of the triplets." />
                        <CheckBox Name="chbTripletDropOneCharacter" Grid.Column="0" Grid.Row="3"
                                  Content="Drop one character"
                                  ToolTip.Tip="Drops a single character from one of the triplets." />

                        <CheckBox Name="chbTripletUseTitlecase" Grid.Column="1" Grid.Row="0"
                                  Content="Title case"
                                  ToolTip.Tip="Triplets will start with uppercase letter." />
                        <CheckBox Name="chbTripletRestrictWordBreakup" Grid.Column="1" Grid.Row="1"
                                  Content="Restrict word breakup"
                                  ToolTip.Tip="Any non-word character will be only appended or prepended to the triplet instead of being in the middle." />
                        <CheckBox Name="chbTripletRestrictAdjustmentsToSuffix" Grid.Column="1" Grid.Row="2"
                                  Content="Restrict adjustment to suffix"
                                  ToolTip.Tip="Any non-triplet characters will be only appended at the end of password." />
                        <CheckBox Name="chbTripletUseSpacesSeparator" Grid.Column="1" Grid.Row="3"
                                  Content="Use space separator"
                                  ToolTip.Tip="Each triplet will be separated by a space." />

                        <StackPanel Grid.Column="0" Grid.Row="4" Margin="0 7 0 0" HorizontalAlignment="Center" Orientation="Horizontal">
                            <Label Content="Triplet count:" VerticalAlignment="Center" />
                            <TextBox Name="txtTripletCount" Text="6" MaxLength="2" TextAlignment="Center" Margin="7 0 0 0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Margin="0 7 0 0">
            <Label Content="Password:" />
            <TextBox Name="txtPassword" IsReadOnly="True" />
        </StackPanel>

        <DockPanel Margin="0 11 0 0">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Image Name="imgGeneratorLevel" Width="48" Height="48" />
                <Label Name="lblGeneratorStats" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Margin" Value="7 0 0 0" />
                    </Style>
                </StackPanel.Styles>
                <Button Content="_Regenerate" Click="btnRegenerate_Click" HorizontalContentAlignment="Center" />
                <Button Name="btnCopy" Content="_Copy" Click="btnCopy_Click" HorizontalContentAlignment="Center" />
            </StackPanel>
        </DockPanel>

    </StackPanel>

</Window>
